<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#336633" android:orientation="vertical">
    <TextView android:layout_height="wrap_content" 
    android:id="@+id/textView2" 
    android:textSize="7pt"
    android:layout_width="wrap_content" 
    android:layout_weight="1" 
    android:layout_marginLeft="10dip" 
    android:layout_marginTop="2dip" 
    android:typeface="normal"></TextView>
    <EditText android:hint="Tag" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="10dip" android:layout_marginLeft="10dip" android:layout_weight="1" android:maxLength="32" android:typeface="normal" android:id="@+id/editText1"></EditText>
    <TextView android:typeface="normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="7pt" android:layout_marginLeft="10dip" android:layout_weight="1" android:layout_gravity="left" android:id="@+id/textView1"></TextView>
    <EditText android:layout_width="fill_parent" android:hint="Message" android:layout_height="160dip" android:layout_marginRight="10dip" android:layout_marginLeft="10dip" android:gravity="top" android:layout_weight="1" android:maxLength="256" android:layout_gravity="center_horizontal" android:typeface="normal" android:id="@+id/editText2"></EditText>
    
    <Button android:id="@+id/sendbutton1" 
    android:text="OMG LOL" 
    android:textSize="7pt"
    android:layout_gravity="center_horizontal" 
    android:layout_width="225dip" 
    android:layout_weight="1" 
    android:typeface="normal"
    android:clickable="true"
    android:layout_height="50dip"></Button>
    <Button android:layout_height="wrap_content" 
    android:id="@+id/toread" 
    android:layout_gravity="center" 
    android:layout_width="wrap_content" 
    android:text="Read"></Button>
</LinearLayout>
